{
  "name": "Flutter Development Container",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "runArgs": [],
  // Ports are required for ADB connections to Android emulators on the host system
  "forwardPorts": [
    5554,
    5555
  ],
  "postStartCommand": "adb connect host.docker.internal:5555 && flutter pub get",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "localizely.flutter-intl",
        "marcelovelasquez.flutter-tree",
        "gornivv.vscode-flutter-files"
      ]
    }
  }
}